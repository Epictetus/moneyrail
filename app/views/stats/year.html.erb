<h2>Statictics
  <small><%= link_to_show_year_stats("<<", @year-365) %></small>
  <%= format_year(@year) %>
  <small><%= link_to_show_year_stats(">>", @year+365) %></small>
</h2>

<table class="stats">
  <%# row 1: Expense and Income %>
  <tr>
    <th rowspan="2"></th>
    <th colspan="<%= Category.expenses.size %>">Expense</th>
    <th colspan="<%= Category.incomes.size  %>">Income</th>
  </tr>

  <%# row 2: Categories %>
  <tr>
    <% @categories.each do |category| %>
      <th><%=h category.name %></th>
    <% end %>
  </tr>

  <%# row 3-: stat %>
  <% @stat.each do |row| %>
    <tr>
    <% row.each do |item| %>
      <% case item 
         when Date %>
        <td><%= link_to_show_month_stats(item) %></td>
      <% else %>
        <td><%=h item %></td>
      <% end %>
    <% end %>
    </tr>
  <% end %>
</table>
