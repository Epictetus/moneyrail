<h1><%=h @year %>/<%=h @month %></h1>
<% @accounts.each do |acc| %>
  <h2><%=h acc.name %></h2>

  <table class="editor">
    <tr>
      <th class="date" rowspan="2">
        Date
      </th>
      <% [:expense, :income, :move].each do |kind| %>
        <th colspan="<%= @categories[kind].length * 2 %>">
          <%=h kind.to_s.capitalize %>
        </th>
      <% end %>
    </tr>

    <tr>
      <% [:expense, :income, :move].each do |kind| %>
        <% @categories[kind].each do |cat| %>
          <th class="category" colspan="2">
            <%=h cat.name %>
          </th>
        <% end %>
      <% end %>
    </tr>

    <% make_table_data(acc, @categories).each do |row| %>
      <tr>
        <% row.each do |item| %>
          <% case item
             when Date %>
            <td>
              <%=h item.to_s %>
            </td>
          <% when Income, Expense, Move %>
            <td>
              <input type="text" value="<%=h item.title %>">
            </td>
            <td class="number">
              <input type="text" value="<%=h item.amount %>">
            </td>
          <% else %>
            <td>
              <input type="text">
            </td>
            <td class="number">
              <input type="text">
            </td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </table>
<% end %>
